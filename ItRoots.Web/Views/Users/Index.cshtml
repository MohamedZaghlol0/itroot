@model IEnumerable<ItRoots.Data.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New User</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Is Verified?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.IsVerified</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>